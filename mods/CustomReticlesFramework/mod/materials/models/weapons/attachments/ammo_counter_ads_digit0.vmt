"Basic"
{
	"$surfaceprop" "plastic"

	"$basetexture" "models\weapons\attachments\_ammo\ammo_counter_numbers_tf2_col"
	"$selfillummask" "models\weapons\attachments\ammo_counter_numbers_ilm"
	"$translucent" "1"
	//"$selfillum" "1"

	"$ammofrac" "0.0"
	$valueone	"1"
	
	$alpha	0.01
	$alpha_temp	0.01
	$scalar		5
	
	$color	"[.0 .0 .0]"
	$valuezero "0"
	$color_temp_0	".0"
	$color_temp_1	".0"
	$color_temp_2	".0"
	$colorscale		"3.4"

	"$ammo" "0"
	"$atlasFrames" "[16 1]"
	"$atlasFrameStart" "[0 0]"

	"$ammo" "0"
	"$atlasFrames" "[16 1]"
	"$atlasFrameStart" "[0 0]"
	
	"Proxies"
	{
		"ClipAmmo"
		{
			"resultVar" "$ammo"
		}
	
		"NumericCounterAtlasFrame"
		{
			"value"						"$ammo"
			"digitIndex"				"0"
			"resultAtlasFrameIndexVar"	"$atlasFrameStart[0]"
		}
	
		"TextureAtlas"
		{
			"frameSize"		"$atlasFrames"
			"frameStart"	"$atlasFrameStart"
			"resultVar"		"$basetexturetransform"
		}

		"ClipAmmoColor"
		{
			"resultVar"			"$color"
		}
		Clamp	//0
        {
            srcVar1		$valuezero
            min			"$color[0]"
            max			"$color[0]"
            resultVar	$color_temp_0
        }
		
        Clamp	//1
        {
            srcVar1		$valuezero
            min			"$color[1]"
            max			"$color[1]"
            resultVar	$color_temp_1
        }
		Clamp	//2
        {
            srcVar1		$valuezero
            min			"$color[2]"
            max			"$color[2]"
            resultVar	$color_temp_2
        }
		multiply	//0
		{
			srcVar1		$color_temp_0
			srcVar2		"$colorscale"
			resultVar	"$color[0]"
		}
		multiply	//1
		{
			srcVar1		$color_temp_1
			srcVar2		"$colorscale"
			resultVar	"$color[1]"
		}
		multiply	//2
		{
			srcVar1		$color_temp_2
			srcVar2		"$colorscale"
			resultVar	"$color[2]"
		}
		
		"HoloSight"
		{
			resultVar $alpha
		}
		Equals
		{
			srcVar1 $alpha
			resultVar $alpha_temp
		}
		Divide
		{
			srcVar1		$alpha_temp
			srcVar2		$scalar
			resultVar	$alpha
		
		}
		Clamp
       	{
			srcVar1		$alpha
			min		0.0
			max		.2
			resultVar		$alpha
		}
	}
}
